rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Catch-all rule: Require authentication for ALL reads and writes by default
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
    
    // Settings configuration (like categories) can be read by any authenticated user
    match /settings/{document=**} {
      allow read: if request.auth != null;
      // Note: Ideally, only admins should write here, but since role scoping 
      // was skipped to preserve data architecture, we treat authenticated users equally for now 
      // or rely on UI-level gating to avoid complex custom claim checks.
      allow write: if request.auth != null;
    }
  }
}
